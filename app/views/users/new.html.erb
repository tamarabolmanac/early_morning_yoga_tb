<% if flash[:notice] %>
  <div class="flash-message notice">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:alert] %>
  <div class="flash-message alert">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= content_tag :h1, "Sign Up", class: "page-title" %>

<div class="form-container ">
  <!-- Left Form Section -->
  <div class="form-section">
    <%= form_with model: @user, local: true, class: "registration-form" do |f| %>
      <div class="form-field">
        <%= f.label :first_name, "First Name" %>
        <%= f.text_field :first_name, required: true, placeholder: "Enter your first name", class: "input-field" %>
      </div>
  
      <div class="form-field">
        <%= f.label :last_name, "Last Name" %>
        <%= f.text_field :last_name, required: true, placeholder: "Enter your last name", class: "input-field" %>
      </div>
  
      <div class="form-field">
        <%= f.label :email, "Email Address" %>
        <%= f.email_field :email, required: true, placeholder: "Enter your email", class: "input-field" %>
      </div>
  
      <div class="form-field">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, required: true, placeholder: "Enter your password", class: "input-field" %>
      </div>
  
      <div class="form-field">
        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation, required: true, placeholder: "Confirm your password", class: "input-field" %>
      </div>
  
      <div class="form-field">
        <%= f.check_box :subscribed_to_newsletter, class: "checkbox-field" %>
        <%= f.label :subscribed_to_newsletter, "Subscribe to our newsletter" %>
      </div>
  
      <div class="form-actions">
        <%= f.submit "Sign Up", class: "submit-btn" %>
        <p><%= link_to "Already have an account?", login_path, class: "login-link" %></p>
      </div>
    <% end %>
  </div>

  <!-- Right Yoga Image Section -->
  <div class="image-section">
    <%= image_tag asset_path('bgd.jpg'), class: "yoga-image" %>
  </div>
</div>
